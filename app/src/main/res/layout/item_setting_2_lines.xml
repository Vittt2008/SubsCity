<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selectable_item_bg">

    <ImageView
        android:id="@+id/iv_setting_icon"
        style="@style/AppTheme.Image.Setting"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_movie_star" />

    <TextView
        android:id="@+id/tv_setting_title"
        style="@style/AppTheme.TextView.Setting.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_settings_subtitle"
        app:layout_constraintStart_toEndOf="@+id/iv_setting_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Скоро в прокате" />

    <TextView
        android:id="@+id/tv_settings_subtitle"
        style="@style/AppTheme.TextView.Setting.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_setting_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting_title"
        tools:text="Санкт-Петербург" />

</androidx.constraintlayout.widget.ConstraintLayout>