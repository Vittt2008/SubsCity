<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_bg"
    android:minHeight="96dp"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_cinema_name"
        style="@style/AppTheme.TextView.Cinema.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Формула Кино Галерея" />

    <TextView
        android:id="@+id/tv_cinema_address"
        style="@style/AppTheme.TextView.Medium.Black.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Мал.Морская, 24" />

    <TextView
        android:id="@+id/tv_cinema_metro_station"
        style="@style/AppTheme.TextView.Medium.Black.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="м. Адмиралтейская" />


</LinearLayout>