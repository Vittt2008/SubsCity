<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Activity">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.ActivityAnimation</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar" parent="AppTheme.Activity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/events_right_in</item>
        <!--<item name="android:activityOpenExitAnimation">@anim/events_left_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/events_left_out</item>-->
        <item name="android:activityCloseExitAnimation">@anim/events_left_out</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary
        </item>
    </style>

    <style name="AppTheme.YouTube" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Button.SocialNetwork" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="AppTheme.Button.Accent" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:background">@drawable/review_bg</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TextView.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextView.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextView.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextView.Huge">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextView.ExtraHuge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.TextView.Small.Black">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="AppTheme.TextView.Small.White">
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="AppTheme.TextView.Small.Black.Subtitle">
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="AppTheme.TextView.Medium.Black">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="AppTheme.TextView.Medium.Black.Subtitle">
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="AppTheme.TextView.Medium.Black.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextView.Large.Black">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="AppTheme.TextView.Large.Black.Subtitle">
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="AppTheme.TextView.Large.Black.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextView.Huge.Black">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="AppTheme.TextView.Huge.Black.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextView.ExtraHuge.Black">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="AppTheme.TextView.Screening">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/screening_text_color</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="AppTheme.TextView.Screening.Price">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.54</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


</resources>
