<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CoreAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlHighlight">@color/main_ripple_color</item>
        <item name="actionBarTheme">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme" parent="CoreAppTheme" />

    <style name="AppTheme.Activity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.ActivityAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Activity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainActivity">
        <item name="android:windowAnimationStyle">@style/AppTheme.ActivityAnimation</item>
    </style>

    <style name="AppTheme.FirstPickCityActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppTheme.Toolbar">
        <item name="android:textColorSecondary">@color/toolbar_title_color</item>
        <item name="titleTextColor">@color/toolbar_title_color</item>
    </style>

    <style name="AppTheme.ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/events_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/events_left_out</item>
    </style>

    <style name="AppTheme.MainActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseExitAnimation">@anim/events_left_out</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/splash_status_bar_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/splash_color</item>
    </style>

    <style name="AppTheme.YouTube" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Button.SocialNetwork" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="AppTheme.Button.Accent" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:background">@drawable/review_bg</item>
    </style>

    <style name="AppTheme.ExpandedTitleTextAppearance">
        <item name="android:textColor">@color/toolbar_title_color</item>
    </style>

    <style name="AppTheme.CollapsedTitleTextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TextView.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextView.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextView.Huge">
        <item name="android:textSize">20sp</item>
    </style>

    <!--region Screening-->

    <style name="AppTheme.TextView.Screening">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextView.Screening.Date">
        <item name="android:textColor">@color/screening_date_color</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="AppTheme.TextView.Screening.Time">
        <item name="android:textColor">@color/screening_time_color</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="AppTheme.TextView.Screening.Price">
        <item name="android:textColor">@color/screening_price_color</item>
        <item name="android:alpha">0.87</item>
    </style>

    <!--endregion-->

    <!--region Movie-->

    <style name="AppTheme.TextView.Movie">
        <item name="android:textColor">@color/movie_text_color</item>
    </style>

    <style name="AppTheme.TextView.Movie.Language">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextView.Movie.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.TextView.Movie.Genre">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--endregion-->

    <!--region Cinema-->

    <style name="AppTheme.TextView.Cinema.Title" parent="AppTheme.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--endregion-->


    <!-- TextView Style -->

    <style name="AppTheme.TextView.Small.Black.Subtitle" parent="AppTheme.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="AppTheme.TextView.Medium.Black">
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="AppTheme.TextView.Medium.Black.Subtitle">
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="AppTheme.TextView.Medium.Black.Bold">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.TextView.Large.Black">
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="AppTheme.TextView.Large.Black.Subtitle">
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="AppTheme.TextView.Large.Black.Bold">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.TextView.Huge.Black">
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="AppTheme.TextView.Huge.Black.Bold">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


</resources>
